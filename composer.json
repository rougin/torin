{
  "name": "rougin/torin",
  "description": "Simple inventory management.",
  "homepage": "https://github.com/rougin/torin",
  "license": "MIT",
  "authors":
  [
    {
      "email": "rougingutib@gmail.com",
      "homepage": "https://roug.in/",
      "name": "Rougin Gutib",
      "role": "Software Engineer"
    }
  ],
  "require":
  {
    "php": ">=5.4.0",
    "illuminate/database": "*",
    "robmorgan/phinx": "~0.1",
    "rougin/dexter": "dev-master",
    "rougin/dextra": "dev-master",
    "rougin/fortem": "dev-master",
    "rougin/gable": "dev-master",
    "rougin/onion": "dev-master",
    "rougin/validia": "dev-master",
    "rougin/weasley": "~0.7",
    "vlucas/phpdotenv": "~2.0"
  },
  "require-dev":
  {
    "phpunit/phpunit": "*",
    "sanmai/phpunit-legacy-adapter": "*"
  },
  "autoload":
  {
    "psr-4":
    {
      "Rougin\\Torin\\": "src"
    }
  },
  "autoload-dev":
  {
    "psr-4":
    {
      "Rougin\\Torin\\": "tests"
    }
  },
  "scripts":
  {
    "analyze": "phpstan analyse",
    "restyle": "php-cs-fixer fix --config=phpstyle.php",
    "test": "phpunit"
  }
}
